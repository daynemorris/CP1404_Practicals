BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            font_size: 48
            multiline: False
            on_text: app.handle_conversion(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(user_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(user_input.text, -1)
    BoxLayout:
        orientation: 'vertical'
        # Button:
            # text: 'Convert m to km'
            # on_text: app.handle_conversion(user_input.text)
        Label:
            id: output_label
            text: app.output_km
            font_size: 48
            color: (1, 1, 0, 1)

